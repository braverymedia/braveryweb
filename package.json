{
	"name": "braveryweb",
	"version": "1.5.0",
	"description": "Bravery Media Site on 11ty",
	"scripts": {
		"sass": "sass _includes/assets/scss:_includes/assets/css",
		"postcss": "postcss _includes/assets/css/*.css --use autoprefixer cssnano --no-map --replace",
		"build:sass": "npm-run-all --sequential sass",
		"watch:sass": "sass --watch _includes/assets/scss:_includes/assets/css",
		"build:js": "rollup -c",
		"watch:js": "rollup -c --watch",
		"build:eleventy": "ELEVENTY_ENV=production eleventy",
		"watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
		"start": "cross-env NODE_ENV=development npm-run-all build:sass --sequential postcss build:js --parallel watch:*",
		"debug:start": "DEBUG=Eleventy* npm start",
		"build": "cross-env NODE_ENV=production npm-run-all build:sass --sequential --style=compressed postcss build:js --parallel build:eleventy",
		"debug:build": "DEBUG=Eleventy* npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/braverymedia/braveryweb"
	},
	"keywords": [],
	"author": {
		"name": "Joel G Goodman",
		"email": "joel@bravery.co",
		"url": "https://bravery.co"
	},
	"license": "MIT",
	"homepage": "https://bravery.co",
	"devDependencies": {
		"@11ty/eleventy": "^1.0.0",
		"@11ty/eleventy-navigation": "^0.1.6",
		"@11ty/eleventy-plugin-rss": "^1.0.9",
		"@fullhuman/postcss-purgecss": "^4.1.3",
		"@rollup/plugin-commonjs": "^21.0.3",
		"@rollup/plugin-node-resolve": "^13.1.3",
		"@types/markdown-it": "^12.2.3",
		"autoprefixer": "^10.0.1",
		"clean-css": "^5.3.0",
		"cross-env": "^7.0.3",
		"cssnano": "^4.1.10",
		"dotenv": "^16.0.0",
		"luxon": "^1.25.0",
		"markdown-it": "^11.0.1",
		"markdown-it-anchor": "^5.3.0",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^8.2.0",
		"purgecss": "^4.1.3",
		"rollup": "^2.70.1",
		"rollup-plugin-terser": "^7.0.2"
	},
	"dependencies": {
		"@11ty/eleventy-upgrade-help": "^1.0.1",
		"eleventy-plugin-embed-twitter": "^1.3.3",
		"eleventy-plugin-lazyimages": "^2.1.0",
		"eleventy-plugin-reading-time": "0.0.1",
		"html-minifier": "^4.0.0",
		"markdown-it-container": "^3.0.0",
		"postcss": "^8.1.4",
		"sass": "^1.28.0",
		"terser": "^5.3.8",
		"uglify-es": "^3.3.9"
	},
	"browserslist": [
		"last 2 versions"
	]
}
