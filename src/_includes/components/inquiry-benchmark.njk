<div class="rfi-form">
    <form name="benchmark" method="POST" netlify-honeypot="bot-field"  data-netlify="true" id="inquire-benchmark">
        <fieldset name="contact">
            <p class="honey"> <label>Donâ€™t fill this out if you're human: <input name="bot-field" /></label> </p>
            <div class="field is-required">
                <label for="contact-name">Name</label>
                <input name="name" class="name" id="contact-name" required>
                <span>*</span>
            </div>
            <div class="field">
                <label for="contact-title">Work title</label>
                <input name="title" id="contact-title" class="title">
            </div>
            <div class="field is-required">
                <label for="contact-email">Email</label>
                <input type="email" name="email" class="email" id="contact-email" required>
                <span>*</span>
            </div>
            <div class="field is-required">
                <label for="contact-org">Organization</label>
                <input name="institution" class="institution" id="contact-org" required>
                <span>*</span>
            </div>
            <div class="field">
                <label for="contact-url">Website URL</label>
                <input type="url" name="url" id="contact-url" class="institution-url"
                    value="https://">
            </div>
        </fieldset>
        <fieldset name="product">
            <legend>Which Benchmark are you interested in?</legend>
            <section>
                <div class="checkbox">
                    <input type="checkbox" name="analytics" id="contact-analytics" /> <label for="contact-analytics">Analytics ($750)</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="webperf" id="contact-webperf" /> <label for="contact-webperf">Web Performance ($1,500)</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="seo" id="contact-seo" /> <label for="contact-seo">SEO Performance ($6,500)</label>
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="brand" id="contact-brand" /> <label for="contact-brand">Brand Vibe Check ($7,500)</label>
                </div>
            </section>
        </fieldset>
        <div class="field textarea is-required">
            <label>Leave a message</label><span>*</span>
            <textarea name="message" class="contact-message" rows="3" cols="33"
                required></textarea>
        </div>
        <button type="submit" class="button has-icon">Send {% include "svg/paper-plane.svg" %}</button>
    </form>
</div>