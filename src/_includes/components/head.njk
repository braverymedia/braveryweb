<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta name="generator" content="{{ eleventy.generator }}">
    <link rel="preload" href="https://bravery.b-cdn.net/AT-NameSansVariable-Italic-subset.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="https://bravery.b-cdn.net/Monday-Vacation-Script-Italic-subset.woff2" as="font" type="font/woff2" crossorigin>
    <title>{{ title or metadata.title }}{% if page.url != '/' %} / {{ metadata.sitename }} {% endif %}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="canonical" href="{{ canonical or page.url | htmlBaseUrl("https://bravery.co") }}"/>
    <link rel="alternate" type="application/atom+xml" title="Bravery Media Insights" href="{{ metadata.feed.url }}"/>
    <link rel="alternate" type="application/atom+xml" title="Appendix B Podcast" href="{{ metadata.podcast.appb.feed }}"/>
    <link rel="preconnect" href="https://script.hotjar.com">
    <link rel="preconnect" href="https://vars.hotjar.com">
    {# Favicons #}
    <link rel="icon" href="/assets/icons/favicon.ico" sizes="any"> <!-- REVISED (Nov 8)! -->
    <link rel="icon" href="/assets/icons/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/assets/icons/apple-touch-icon.png"/>
    <link rel="manifest" href="/site.webmanifest" />
    {%- block seo -%}
    <meta property="og:type" content="{{ postType or og.type or metadata.og.type }}">
    <meta property="og:image:height" content="1257">
    <meta property="og:image:width" content="2400">
    <meta property="og:title" content="{{ og.title or title or metadata.og.title }}">
    <meta property="og:description" content="{{ og.description or description or metadata.og.description }}">
    <meta property="og:url" content="{{ page.url | htmlBaseUrl("https://bravery.co") }}">
    <meta property="og:image" content="{% if postType == 'article' %}{% src cover.image %}{% else %}{{ og.image or metadata.og.image }}{% endif %}">
    <meta property="og:site_name" content="{{ metadata.og.title }}">
    {% if metadata.og.app_id %}
    <meta property="fb:app_id" content="{{ metadata.og.app_id }}">
    {% endif %}
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ og.title or title or metadata.og.title }}">
    <meta name="twitter:description" content="{{ og.description or description or metadata.og.description }}">
    <meta name="twitter:site" content="{{ metadata.og.site }}">
    <meta name="twitter:creator" content="{{ og.creator or metadata.og.creator }}">
    <meta name="twitter:image" content="{{ og.image or metadata.og.image }}">
    {%- endblock -%}
    {% if site.environment === 'production' %}
        <!-- INLINE CSS -->
    {% else %}
        <link rel="stylesheet" href="/assets/styles/bravery.css">
    {% endif %}
</head>