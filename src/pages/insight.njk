<header class="insight-intro">
  <h1 class="sr">Higher Ed insights, Case Studies, and Blog posts from Bravery Media</h1>
    {% for featured in collections.featuredArticle %}
      <img
        srcset="{% srcset featured.data.cover.image, '16:9' %}"
        data-src="{% src featured.data.cover.image, '16:9' %}"
        width="1600"
        height="900"
        alt="{{ featured.data.cover.alt }}"
        class="featured-hero"
      />
      {% include "components/feature.njk" %}
		{% endfor %}
</header>
<section class="layout layout-split sticky latest-posts" id="latest">
  <div>
    <h2>Latest Insight</h2>
    <ol class="article-list" role="list">
    {% for article in collections.article | noFeatures("pinned") | reverse %}
      <li><a href="{{ article.url | url }}" class="article" title="{{ article.data.title }}">{{ article.data.title }}</a></li>
    {% endfor %}
    </ol>
  </div>
  <div class="work-swiper" data-bravery-carousel>
    <div class="track">
      {% set csList = collections.design %}
      {% for cs in csList %}
        {% include "components/cs-card.njk" %}
      {% endfor %}
    </div>
  </div>
</section>
<section id="podcasts">
  <header><h2><span class="brand">Bravery</span> Podcasts</h2></header>
  <div class="pod-series">
    <a href="{{'/podcast-series/appendix-b/' | url}}" title="Appendix B Series Page">
      <figure class="series-card" data-theme="appb">
          <img src="{% src 'appendix-b-series-cover_vdwkqe.jpg' %}"
            srcset="{% srcset 'appendix-b-series-cover_vdwkqe.jpg' %}" alt="Text reads: Appendix B. A Bravery Podcast." width="500" height="500" decoding="async" />
          <footer>
            <h2>Appendix B</h2>
            <p>The first short-form podcast for higher ed marketers. Candid conversations about the biggest challeges facing our industry.</p>
            <p><strong>{{ collections.appendixb.length }} Episodes</strong></p>
          </footer>
      </figure>
    </a>
    <figure class="series-card" data-theme="how2edu">
          <img src="{% src 'how2edu-cover_mii4me.jpg' %}"
            srcset="{% srcset 'how2edu-cover_mii4me.jpg' %}" alt="A glowing speech bubble outline surrounding the text: How 2 EDU. Below that, text reads: A Bravery Podcast" width="500" height="500" decoding="async" />
          <footer>
            <h2 class="theme-title">How 2 EDU</h2>
            <p>The podcast that breaks down each section of your college or university website so you can make it load faster, rank higher, and perform better.</p>
            <p><strong>Coming Soon</strong></p>
          </footer>
    </figure>
  </div>
</section>
